{
    "name": "inet/sugarcli",
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/inetprocess/sugarcrm"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "guzzle/guzzle": "~3.9",
        "inetprocess/sugarcrm": "dev-sugarcli_integration",
        "jms/serializer": "~0.16",
        "lichtner/fluentpdo": "^1.0",
        "psr/log": "~1",
        "symfony/config": "~2",
        "symfony/console": "~2",
        "symfony/dependency-injection": "~2",
        "symfony/filesystem": "~2",
        "symfony/finder": "~2",
        "symfony/process": "~2",
        "symfony/yaml": "~2"
    },
    "require-dev": {
        "phpunit/phpunit": "~4",
        "phpunit/dbunit": "~1.3"
    },
    "autoload": {
        "psr-4": {
            "SugarCli\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SugarCli\\Tests\\": "tests/"
        }
    },
    "bin": ["bin/sugarcli"]
}
