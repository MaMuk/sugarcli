{
    "name": "inetinventory",
    "apiVersion": "v1",
    "description": "InetInventory server API",
    "operations": {
        "getServers": {
            "httpMethod": "GET",
            "uri": "servers",
            "summary": "Get a list of servers",
            "responseClass": "getListOutput"
        },
        "getServer": {
            "httpMethod": "GET",
            "uri": "servers/{fqdn}",
            "responseClass": "Server",
            "parameters": {
                "fqdn": {
                    "type": "string",
                    "location": "uri",
                    "description": "Fqdn of the server to retrieve",
                    "required": true
                }
            }
        },
        "postServer": {
            "httpMethod": "POST",
            "uri": "servers",
            "responseClass": "postResponse",
            "parameters": {
                "fqdn": {
                    "type": "string",
                    "location": "json",
                    "description": "Fqdn of the server to create",
                    "required": true
                },
                "facts": {
                    "type": "array",
                    "location": "json",
                    "description": "Facts about the server"
                }
            }
        },
        "putServer": {
            "httpMethod": "PUT",
            "uri": "servers/{fqdn_uri}",
            "parameters": {
                "fqdn_uri": {
                    "type": "string",
                    "location": "uri",
                    "description": "Fqdn of the server to replace",
                    "required": true
                },
                "fqdn": {
                    "type": "string",
                    "location": "json",
                    "description": "Fqdn of the server to create",
                    "required": true
                },
                "facts": {
                    "type": "array",
                    "location": "json",
                    "description": "Facts about the server"
                }
            }
        },
        "deleteServer": {
            "httpMethod": "DELETE",
            "uri": "servers/{fqdn}",
            "parameters": {
                "fqdn": {
                    "location": "uri",
                    "description": "Fqdn of the server to retrieve",
                    "required": true
                }
            }
        },
        "getAccounts": {
            "httpMethod": "GET",
            "uri": "accounts",
            "summary": "Get a list of accounts",
            "responseClass": "getListOutput"
        },
        "getAccount": {
            "httpMethod": "GET",
            "uri": "accounts/{name}",
            "responseClass": "Account",
            "parameters": {
                "name": {
                    "type": "string",
                    "location": "uri",
                    "description": "Name of the account to retrieve",
                    "required": true
                }
            }
        },
        "postAccount": {
            "httpMethod": "POST",
            "uri": "accounts",
            "responseClass": "postResponse",
            "parameters": {
                "name": {
                    "type": "string",
                    "location": "json",
                    "description": "Fqdn of the account to create",
                    "required": true
                }
            }
        },
        "putAccount": {
            "httpMethod": "PUT",
            "uri": "accounts/{name_uri}",
            "parameters": {
                "name_uri": {
                    "type": "string",
                    "location": "uri",
                    "description": "Fqdn of the account to replace",
                    "required": true
                },
                "name": {
                    "type": "string",
                    "location": "json",
                    "description": "Fqdn of the account to create",
                    "required": true
                }
            }
        },
        "deleteAccount": {
            "httpMethod": "DELETE",
            "uri": "accounts/{name}",
            "parameters": {
                "name": {
                    "location": "uri",
                    "description": "Name of the account to retrieve",
                    "required": true
                }
            }
        }
    },
    "models": {
        "postResponse": {
            "type": "object",
            "properties": {
                "location": {
                    "type": "string",
                    "location": "header",
                    "sentAs": "Location"
                }
            }
        },
        "Server": {
            "type": "object",
            "properties": {
                "id": {
                    "location": "json",
                    "type": "integer"
                },
                "fqdn": {
                    "location": "json",
                    "type": "string"
                },
                "facts": {
                    "location": "json",
                    "type": ["array", "object"]
                },
                "sugar_instances": {
                    "location": "json",
                    "type": "array"
                }
            }
        },
        "Account": {
            "type": "object",
            "properties": {
                "id": {
                    "location": "json",
                    "type": "integer"
                },
                "name": {
                    "location": "json",
                    "type": "string"
                },
                "sugar_instances": {
                    "location": "json",
                    "type": "array"
                }
            }
        },
        "getListOutput": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "location": "json",
                "$ref": "Server"
            }
        }
    }
}
